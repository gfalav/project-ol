<div class="session_form">
	<% if flash[:alert] %>
		<p id="notice"><%= flash[:alert] %></p>
	<% end %>

	<%= form_tag do %>
		<fieldset>
			<legend>Ingrese usuario y password</legend>

			<table>
			<tr>
				<td class="ses_title"><%= label_tag :email, "Email:  " %></td>
				<td class="ses_field"><%= text_field_tag :email, params[:email] %></td>
			</tr>
			<tr>
				<td class="ses_title"><%= label_tag :password, "Password: " %></td>
				<td class="ses_field"><%= password_field_tag :password, params[:password] %></td>
			</tr>

			</table>
			<div>
				<%= submit_tag "Loggin" %>
			</div>
		</fieldset>

	<% end %>
</div>